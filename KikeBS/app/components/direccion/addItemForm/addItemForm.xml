<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" loaded="pageLoaded">
    <GridLayout rows="auto, *">
        <GridLayout rows="auto, *" cssClass="page-header">
            <GridLayout cssClass="action-bar" columns="auto, *, auto">
                <Button text="Cancel" onTap="onCancelTap" />
                <Label col="1" text="Add" cssClass="action-bar-title" />
                <Button col="2" text="Save" onTap="onSaveTap" />
            </GridLayout>
            <!-- Workaround for one sided border -->
            <StackLayout row="1" cssClass="action-bar-border" height="1"></StackLayout>
        </GridLayout>


        <StackLayout row="1">


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label text="Nombre" cssClass="label" col="0" row="1" />

                <TextField col="1" row="1" text="{{ nombre }}" />
                <!-- nombre content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label text="Numero" cssClass="label" col="0" row="1" />

                <TextField col="1" row="1" text="{{ numero }}" />
                <!-- numero content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label text="Referencia" cssClass="label" col="0" row="1" />

                <TextField col="1" row="1" text="{{ referencia }}" />
                <!-- referencia content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label text="Latitud" cssClass="label" col="0" row="1" />

                <TextField col="1" row="1" text="{{ latitud }}" />
                <!-- latitud content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label text="Longitud" cssClass="label" col="0" row="1" />

                <TextField col="1" row="1" text="{{ longitud }}" />
                <!-- longitud content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- editableListForm21 additional fields -->


        </StackLayout>
        <!-- additional view content -->

    </GridLayout>
</Page>