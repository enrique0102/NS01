<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <GridLayout rows="auto, *">
        <GridLayout rows="auto" columns="*, *">


        </GridLayout>
        <StackLayout row="1">

            <Label text="{{ Codigo }}" />

            <Label text="{{ Costo }}" />


            <TextView text="{{ Estado }}" editable="false" />


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label row="1" text="Platos" cssClass="label" />

                <Label col="1" row="1" text="{{ Platos }}" cssClass="label" textWrap="true" />

                <!-- platos content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- additional view content -->

        </StackLayout>
    </GridLayout>
</Page>